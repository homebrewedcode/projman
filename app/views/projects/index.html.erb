<h1>Projects listing</h1>
<% if flash[:danger] %>
    <p><%= flash[:danger] %></p>
<% end %>
<%= link_to "Create New Project", new_project_path %>
<% @projects.each do |project| %>
    <p><%= link_to project.title, project %></p>
    <p><%= truncate(project.description, length: 100) %></p>
<% end %>
